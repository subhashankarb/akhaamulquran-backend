{
  "name": "akhaamulquran-backend",
  "version": "1.0.0",
  "description": "MERN Stack Backend with Multi-Role Authentication",
  "main": "dist/server.js",
  "scripts": {
    "start": "NODE_ENV=production node dist/server.js",
    "dev": "NODE_ENV=development ts-node-dev --respawn --transpile-only src/server.ts",
    "build:force": "tsc --noEmit false --skipLibCheck true --skipDefaultLibCheck true --noErrorTruncation true --pretty false",
    "start:dev": "NODE_ENV=development ts-node src/server.ts",
    "start:prod": "NODE_ENV=production node dist/server.js",
    "build": "tsc",
    "lint": "eslint . --ext .ts",
    "test": "jest",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down"
  },
  "keywords": [
    "nodejs",
    "typescript",
    "mongodb",
    "redis",
    "jwt",
    "authentication"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "@clickhouse/client": "^1.16.0",
    "amqplib": "^0.10.9",
    "axios": "^1.12.2",
    "bcryptjs": "^3.0.2",
    "bun": "^1.2.23",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^5.1.0",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^8.1.0",
    "form-data": "^4.0.4",
    "helmet": "^8.1.0",
    "joi": "^18.0.1",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.18.2",
    "multer": "^2.0.2",
    "nodemailer": "^7.0.12",
    "redis": "^5.8.2",
    "speakeasy": "^2.0.0",
    "uuid": "^13.0.0",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@types/amqplib": "^0.10.7",
    "@types/bcryptjs": "^2.4.6",
    "@types/cookie-parser": "^1.4.9",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/multer": "^2.0.0",
    "@types/node": "^24.5.2",
    "@types/nodemailer": "^7.0.1",
    "@types/speakeasy": "^2.0.10",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.44.1",
    "@typescript-eslint/parser": "^8.44.1",
    "eslint": "^9.36.0",
    "jest": "^30.1.3",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.2"
  }
}
